<%- include("templates/cabecera.ejs", {tituloWeb: 'Inicio'}) %>
   
<div class="container">

  <h1>Crud Mongo</h1>

    <a href="/mascotas/Crear" class="btn btn-success my-4">
      Crear nueva mascota
    </a>

    <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripción</th>
            <th scope="col">Acción</th>
          </tr>
        </thead>
        <tbody>
            <% if (arrayMascotas.length >0 ) { %>
                <% arrayMascotas.forEach(mascota => { %>
                    <tr>
                        <th scope="row"><%= mascota.id %> </th>
                        <td><%= mascota.nombre %></td>
                        <td><%= mascota.descripcion %></td>
                        <td>
                          <a href="/mascotas/<%= mascota.id %>" class="btn btn-warning btn-sm" >Editar</a>
                        </td>
                      </tr>
                <% }) %>
               <% } %>
        </tbody>
      </table>
</div>

<%- include("templates/footer.ejs") %>